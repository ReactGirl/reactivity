{
  "name": "react-universal",
  "version": "1.0.0",
  "description": "a bleeding edge universal boilerplate for react.",
  "main": "index.js",
  "repository": "https://github.com/madeagency/react-universal.git",
  "private": true,
  "author": "Made Code",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.3.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-env": "^1.2.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-2": "^6.22.0",
    "eslint": "^3.17.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "npm-run-all": "^4.0.2",
    "start-server-webpack-plugin": "^2.1.2",
    "webpack": "^2.2.1",
    "webpack-chunk-hash": "^0.4.0",
    "webpack-dev-server": "^2.4.1",
    "webpack-node-externals": "^1.5.4"
  },
  "dependencies": {
    "dotenv-webpack": "^1.4.3",
    "express": "^4.15.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "http-proxy": "^1.16.2",
    "isomorphic-fetch": "^2.2.1",
    "react": "^15.4.2",
    "react-async-component": "^0.2.2",
    "react-dom": "^15.4.2",
    "react-hot-loader": "next",
    "react-redux": "^5.0.3",
    "react-redux-epic": "^0.1.0",
    "react-router-dom": "next",
    "redux": "^3.6.0",
    "redux-observable": "^0.14.0",
    "rxjs": "^5.2.0",
    "serialize-javascript": "^1.3.0",
    "universal-webpack": "^0.3.7",
    "webpack-visualizer-plugin": "^0.1.11"
  },
  "scripts": {
    "start:server": "rm -rf ./build && webpack --config  webpack.config.server.js",
    "start:client": "webpack-dev-server --config webpack.config.client.js",
    "start": "rm -rf ./.build && npm-run-all --parallel start:server start:client",
    "production:client:build": "webpack --config webpack.config.client.production.js -p --colors --display-error-details",
    "production:server:build": "webpack --config webpack.config.server.production.js -p --colors --display-error-details",
    "production": "rm -rf dist; npm-run-all --parallel production:server:build production:client:build; node bin/start-server.js"
  }
}
