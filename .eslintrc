{
  "extends": ["airbnb", "prettier", "prettier/react"],
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "global-require": "off",
    "comma-dangle": "off",
    "no-console": "off",
    "no-underscore-dangle": "off",
    "react/no-danger": "off",
    "no-bitwise": "off",
    "semi": [2, "never"],
    "react/jsx-filename-extension": [
      2,
      {
        "extensions": [".jsx", ".js"]
      }
    ],
    "prettier/prettier": [
      2,
      {
        "printWidth": 80,
        "trailingComma": "none",
        "semi": false
      }
    ],
    "no-restricted-globals": ["error", "event", "fdescribe"],
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": ["Link"],
        "specialLink": ["to"]
      }
    ]
  },
  "parser": "babel-eslint",
  "plugins": ["react", "import", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "./webpack/client.prod.js"
      },
      "node": {
        "paths": ["node_modules", "src", "components", "reducers"]
      }
    }
  }
}
