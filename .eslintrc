{
  "extends": "eslint-config-airbnb",
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "comma-dangle": "off", // not sure why airbnb turned this on.
    "no-console": "off",
    "semi": [2, "never"],
    "react/jsx-filename-extension": [2, { "extensions": [".jsx", ".js"] }]
  },
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "import"
  ],
  "settings": {
    "import/ignore": [
      "node_modules",
      ".scss$"
    ],
    "import/resolve": {
      "moduleDirectory": [
        "node_modules",
        "src",
        "components",
        "reducers",
        "api"
      ]
    },
    "import/resolver": {
      "webpack": {
         "config": "webpack.config.base.js"
      }
    }
  }
}
